<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/Sienna"
    tools:context=".MainActivity">



    <Button
        android:id="@+id/banladeshBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bangladesh"
        android:drawableLeft="@drawable/bangladesh_icon"
        android:background="@color/Plum"
        android:textSize="18sp"
        android:layout_marginBottom="15dp"/>
    <Button
        android:id="@+id/indiaBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/india"
        android:drawableLeft="@drawable/india_icon"
        android:background="@color/Plum"
        android:textSize="18sp"
        android:layout_marginBottom="15dp"/>
    <Button
        android:id="@+id/pakisthanBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pakisthan"
        android:drawableLeft="@drawable/pakisthan_icon"
        android:background="@color/Plum"
        android:textSize="18sp"
        android:layout_marginBottom="15dp" />

</LinearLayout>